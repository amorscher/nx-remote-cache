{
    "name": "nx-redis-cache",
    "version": "0.0.4",
    "description": "Nx custom remote cache server backed by Redis",
    "bin": {
        "nx-redis-cache": "./dist/cli.js"
    },
    "scripts": {
        "build:js": "tsc",
        "build:types": "tsc --emitDeclarationOnly",
        "build": "npm run build:js && npm run build:types",
        "dev": "tsx watch src/cli.ts",
        "typecheck": "tsc --noEmit",
        "test": "jest",
        "test:watch": "jest --watch",
        "coverage": "jest --coverage"
    },
    "files": [
        "dist/",
        "bin/"
    ],
    "author": "Ambros Morscher",
    "repository": {
        "type": "git",
        "url": "https://github.com/amorscher/nx-remote-cache.git"
    },
    "homepage": "https://github.com/amorscher/nx-remote-cache#readme",
    "keywords": [
        "nx",
        "nx-custom-cache",
        "redis"
    ],
    "license": "MIT",
    "dependencies": {
        "@types/yargs": "^17.0.33",
        "yargs": "^18.0.0"
    },
    "devDependencies": {
        "@types/jest": "^30.0.0",
        "@types/node": "^24.0.7",
        "esbuild": "^0.25.5",
        "jest": "^30.0.3",
        "ts-jest": "^29.4.0",
        "tsx": "^4.20.3",
        "typescript": "^5.8.3"
    }
}
